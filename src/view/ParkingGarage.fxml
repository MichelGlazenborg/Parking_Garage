<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
   <top>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="_Simulator">
              <items>
                  <MenuItem onAction="#setPricePerMinute" text="Set price per minute" />
              </items>
              <items>
                  <MenuItem onAction="#makePassHolderSpots" text="Make pass holder spots" />
              </items>
              <items>
                  <MenuItem onAction="#makeReservationsAt" text="Make reservation at" />
              </items>
              <items>
                  <SeparatorMenuItem />
              </items>
              <items>
                  <MenuItem onAction="#setTime" text="Set the time at" />
              </items>
              <items>
                  <MenuItem onAction="#setSpeed" text="Set simulator speed" />
              </items>
              <items>
                  <MenuItem onAction="#resetSpeed" text="Reset simulator speed" />
              </items>
              <items>
                  <MenuItem onAction="#showStats" text="Show the detailed statistics" />
              </items>
              <items>
                  <SeparatorMenuItem />
              </items>
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Close" />
              </items>
          </Menu>

          <Menu mnemonicParsing="false" text="_Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <VBox prefHeight="800.0" prefWidth="500.0" BorderPane.alignment="CENTER_LEFT">
         <children>
             <Button fx:id="text_pane1" mnemonicParsing="false" text="Run the simulator">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate1" mnemonicParsing="false" text="1 minute" onAction="#tick1">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate2" mnemonicParsing="false" text="60 minutes" onAction="#tick60">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate3" mnemonicParsing="false" text="1 day" onAction="#tickDay">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate4" text="Run for ..." onAction="#submit">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate5" text="Stop" onAction="#stop" disable="true">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
             <Button fx:id="button_operate6" text="Reset" onAction="#reset" disable="true">
                 <VBox.margin>
                     <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                 </VBox.margin>
             </Button>
         </children>
      </VBox>
   </left>
   <center>
      <Canvas fx:id="_canvas" height="600.0" width="800.0" BorderPane.alignment="TOP_LEFT" />
   </center>
    <right>
        <VBox fx:id="_sidebarRight" prefWidth="300.0">
            <children>
                <Label fx:id="titleRev" prefHeight="20" prefWidth="300" text="Revenue" BorderPane.alignment="TOP_CENTER" />
                <Label fx:id="dayRevenue" prefHeight="60" prefWidth="300" BorderPane.alignment="TOP_LEFT">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="revenue" prefHeight="200" prefWidth="320" BorderPane.alignment="TOP_RIGHT">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="titleTime" prefHeight="20" prefWidth="300" text="Time" BorderPane.alignment="CENTER" />
                <Label fx:id="date" prefHeight="70" prefWidth="300" BorderPane.alignment="TOP_LEFT">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="clock" prefHeight="70" prefWidth="300">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </right>
   <bottom>
       <VBox fx:id="_statistics" prefHeight="50" prefWidth="1000" BorderPane.alignment="BOTTOM_LEFT">
           <children>
           </children>
       </VBox>
   </bottom>
</BorderPane>
